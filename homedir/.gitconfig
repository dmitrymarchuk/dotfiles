[user]
    name = Dmitry Marchuk
    email = code@dmarchuk.com
[merge]
    tool = kdiff3
    conflictstyle = diff3
[mergetool]
    prompt = false
    keepBackup = false
    trustExitCode = true
[diff]
    tool = vimdiff
[difftool]
    prompt = true
    keepBackup = false
    trustExitCode = true
[branch]
    autosetuprebase = always
[color]
    branch=auto
    ui = auto
[color "status"]
    added=green
    changed=yellow
    untracked=white ul
[color "diff"]
    meta=white bold
    frag=magenta ul
    old=red bold
    new=green bold
[push]
    default = simple
[pull]
    rebase = true
[core]
    editor=vim
    autocrlf = input
    excludesfile = ~/.gitignore
[alias]
    s = status
    r = reset
    p = pull
    a = add
    b = branch
    c = commit
    d = diff
    ds = "diff --stat"
    dc = "diff --cached"
    co = checkout
    ha = log --pretty=format:\"%Cred%h%Creset %C(yellow)%d%Creset | %C(bold blue)[%an]%Creset %s %Cgreen(%cr)%Creset\" --graph --all
    h =  log --pretty=format:\"%Cred%h%Creset %C(yellow)%d%Creset | %C(bold blue)[%an]%Creset %s %Cgreen(%cr)%Creset\" --graph --since=\"7 days ago\"
    hat =log --pretty=format:\"%Cred%h%Creset %Cgreen%ad%Creset %C(yellow)%d%Creset | %C(bold blue)[%an]%Creset %s %Cgreen(%cr)%Creset\" --graph --all --date=local
    ht = log --pretty=format:\"%Cred%h%Creset %Cgreen%ad%Creset %C(yellow)%d%Creset | %C(bold blue)[%an]%Creset %s %Cgreen(%cr)%Creset\" --graph --date=local --since=\"7 days ago\"
    type = cat-file -t
    dump = cat-file -p
    
